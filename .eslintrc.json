{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "jest"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-inner-declarations": "off",
    "linebreak-style": ["warn", "windows"],
    "no-use-before-define": "off",
    "no-console": "warn",
    "arrow-parens": "off",
    "no-unused-vars": "warn",
    "prettier/prettier": "error",
    "import/extensions": "off",
    "no-restricted-globals": "off"
  }
}
